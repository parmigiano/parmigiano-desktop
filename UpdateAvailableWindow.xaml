<Window x:Class="Parmigiano.UpdateAvailableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parmigiano"
        mc:Ignorable="d"
        Title="Update available" 
        Height="700" Width="1100" MinHeight="550" MinWidth="910"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/UI/Resources/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="#000" CornerRadius="13" BorderBrush="#333" BorderThickness="1">
        <Grid>
            <Border CornerRadius="13,13,0,0" Height="27" Background="#222" VerticalAlignment="Top" MouseDown="TitleBar_MouseDown">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Width="40"
                            Cursor="Arrow"
                            BorderThickness="0"
                            Click="Minimize_Click">

                        <Image Source="pack://application:,,,/Public/ico/minus.png" 
                               MaxWidth="15" 
                               Margin="0,7,0,0" 
                               Opacity="0.8"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="Transparent">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Width="40"
                            Cursor="Arrow"
                            BorderThickness="0"
                            Click="Maximize_Click">

                        <Image Source="pack://application:,,,/Public/ico/squircle.png" 
                                MaxWidth="13" 
                                Opacity="0.8"
                                RenderOptions.BitmapScalingMode="HighQuality"/>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="Transparent">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Width="40"
                            Cursor="Arrow"
                            BorderThickness="0"
                            Click="Close_Click">

                        <Image Source="pack://application:,,,/Public/ico/x.png" 
                               MaxWidth="15" 
                               Opacity="0.8"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="Transparent"
                                        CornerRadius="0,13,0,0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Red"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>

            <Grid Margin="20,27,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition x:Name="RightColumn"
                                      Width="{Binding ActualWidth,
                                                      RelativeSource={RelativeSource AncestorType=Window},
                                                      Converter={StaticResource WidthToVisibilityConverter}}" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Vertical"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            MaxWidth="450">

                    <TextBlock Text="Доступно обновление"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Новая версия Parmigiano Chat уже доступна! Обновите приложение, чтобы получить последние функции, улучшения производительности и исправления ошибок."
                               Foreground="#888"
                               Margin="0,0,0,20"
                               TextWrapping="Wrap"
                               FontSize="14"/>

                    <TextBlock Text="Рекомендуем всегда использовать актуальную версию для лучшего опыта."
                               Foreground="#888"
                               Margin="0,0,0,20"
                               TextWrapping="Wrap"
                               FontSize="14"/>

                    <TextBlock Text="Обновить приложение?"
                               x:Name="UpdButton"
                               Foreground="#8A8A8A"
                               FontSize="13"
                               Margin="0,5,0,0"
                               Cursor="Hand"
                               MouseLeftButtonUp="UpdButton_MouseLeftButtonUp">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#8A8A8A" />
                                <Setter Property="TextDecorations" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#3ba7f5"/>
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <Viewbox Grid.Column="1"
                         x:Name="RightImageContainer"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Stretch="Uniform"
                         Margin="75,0,75,0">
                    <Image Source="pack://application:,,,/Public/assets/logo-bg-none.png"
                            MaxWidth="250"/>
                </Viewbox>
            </Grid>
        </Grid>
    </Border>
</Window>

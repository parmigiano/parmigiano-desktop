<UserControl x:Class="Parmigiano.UI.Components.UserMeCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parmigiano.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="700">

    <Border Background="{StaticResource SecondaryBackgroundBrush}" Padding="20,10" BorderBrush="#222" BorderThickness="0,0,0,1">
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="pack://application:,,,/Public/assets/logo-bg-x250.png"
                       MaxWidth="25"/>

                <TextBlock Text="Parmigiano Chat"
                           Foreground="#fff"
                           FontWeight="Medium"
                           Margin="10,0,0,0"
                           FontSize="17"/>
            </StackPanel>

            <Image Source="pack://application:,,,/Public/ico/log-out.png"
                    Grid.Column="1"
                    MaxWidth="16"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,0"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Cursor="Hand"
                    MouseLeftButtonUp="Logout_MouseLeftButtonUp">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Opacity" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>

            <Image Source="pack://application:,,,/Public/ico/users.png"
                    Grid.Column="2"
                    MaxWidth="18"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,30,0"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Cursor="Hand">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Opacity" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>

            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right"
                        Grid.Column="3" 
                        MouseLeftButtonUp="UserProfile_MouseLeftButtonUp" 
                        Cursor="Hand"
                        Background="Transparent">

                <Grid Width="40" Height="40">
                    <Ellipse x:Name="AvatarCircle" RenderOptions.BitmapScalingMode="HighQuality">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="AvatarImage" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <TextBlock x:Name="InitialText"
                                Visibility="Collapsed"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="17"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>

                    <Rectangle x:Name="HoverOverlay"
                               Fill="Black"
                               Opacity="0"
                               RadiusX="26"
                               RadiusY="26"/>
                </Grid>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>

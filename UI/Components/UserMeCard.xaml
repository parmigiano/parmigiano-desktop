<UserControl x:Class="Parmigiano.UI.Components.UserMeCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parmigiano.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">

    <Grid Margin="10" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
            <Grid Width="52" Height="52" Cursor="Hand" MouseLeftButtonUp="AvatarGrid_MouseLeftButtonUp">
                <Ellipse x:Name="AvatarCircle" RenderOptions.BitmapScalingMode="HighQuality">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="AvatarImage" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <TextBlock x:Name="InitialText"
                           Visibility="Collapsed"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="20"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <Rectangle x:Name="HoverOverlay"
                           Fill="Black"
                           Opacity="0"
                           RadiusX="26"
                           RadiusY="26"/>

                <Image x:Name="CameraIcon" Opacity="0" Source="pack://application:,,,/Public/ico/camera.png" MaxWidth="21" RenderOptions.BitmapScalingMode="HighQuality" />

                <Grid.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0.5"
                                     Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetName="CameraIcon"
                                     Storyboard.TargetProperty="Opacity"
                                     To="1"
                                     Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>

                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0"
                                     Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetName="CameraIcon"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0"
                                     Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Grid.Triggers>
            </Grid>

            <TextBlock Text="Гость"
                   x:Name="UsernameText"
                   VerticalAlignment="Center"
                   Foreground="White"
                   FontWeight="SemiBold"
                   FontSize="15"
                   Margin="15,0,0,0"/>
        </StackPanel>

        <Image Source="pack://application:,,,/Public/ico/ellipsis-vertical.png"
               Grid.Column="1"
               MaxWidth="17"
               VerticalAlignment="Center"
               RenderOptions.BitmapScalingMode="HighQuality"
               Cursor="Hand"/>
    </Grid>
</UserControl>

<UserControl x:Class="Parmigiano.UI.Components.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parmigiano.UI.Components"
             xmlns:controllers="clr-namespace:Parmigiano.UI.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <controllers:StringToVisibilityConverter x:Key="InverseStringToVisibilityConverter" Inverse="False"/>
        <controllers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <controllers:LastOnlineConverter x:Key="LastOnlineConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#111" Padding="20,5,20,10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Username}" Grid.Row="1"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="15"/>

                <TextBlock Text="{Binding LastOnlineDate, Converter={StaticResource LastOnlineConverter}}"
                           Grid.Row="1"
                           Foreground="#999"
                           FontWeight="Normal"
                           FontSize="12"
                           Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <ScrollViewer.Background>
                <ImageBrush ImageSource="pack://application:,,,/Public/assets/chat-wallpaper.png"
                    Stretch="UniformToFill"
                    Opacity="0.2"/>
            </ScrollViewer.Background>

            <ItemsControl ItemsSource="{Binding SelectedUser.Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Сообщение собеседника -->
                            <Border Grid.Column="0"
                            Background="#222"
                            CornerRadius="15"
                            Padding="10"
                            HorizontalAlignment="Left"
                            MaxWidth="300"
                            Visibility="{Binding IsMine, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                                <TextBlock Text="{Binding Text}"
                                           Foreground="White"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <!-- Мое сообщение -->
                            <Border Grid.Column="1"
                                    Background="#7B61FF"
                                    CornerRadius="15"
                                    Padding="10"
                                    HorizontalAlignment="Right"
                                    MaxWidth="300"
                                    Visibility="{Binding IsMine, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding Text}"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid>
                <TextBox Grid.Column="0"
                        x:Name="MessageBox"
                        Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                        MinHeight="40"
                        VerticalAlignment="Center"
                        Padding="10,13,55,13"
                        FontSize="14"
                        Background="#111"
                        Foreground="White"
                        BorderThickness="0"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"/>

                <TextBlock Text="Сообщение..."
                           Foreground="#999"
                           FontSize="14"
                           Padding="16,13,55,13"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           Panel.ZIndex="1"
                           Visibility="{Binding Text, ElementName=MessageBox, 
                                        Converter={StaticResource InverseStringToVisibilityConverter}}"/>
            </Grid>

            <Button Grid.Column="1"
                    FontSize="18"
                    Background="Transparent"
                    Foreground="White"
                    Width="50"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    BorderThickness="0"
                    Margin="5,0,5,0"
                    Cursor="Hand">
                <Image Source="pack://application:,,,/Public/ico/send.png" MaxWidth="21" RenderOptions.BitmapScalingMode="HighQuality" />

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</UserControl>

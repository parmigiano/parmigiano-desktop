<UserControl x:Class="Parmigiano.UI.Components.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parmigiano.UI.Components"
             xmlns:controllers="clr-namespace:Parmigiano.UI.Controllers"
             xmlns:vm="clr-namespace:Parmigiano.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <controllers:StringToVisibilityConverter x:Key="InverseStringToVisibilityConverter" Inverse="True"/>
        <controllers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <controllers:LastOnlineMultiConverter x:Key="LastOnlineConverter"/>
        <controllers:WidthLimitConverter x:Key="WidthLimitConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#111" Padding="20,5,20,10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding SelectedUser.Username}" Grid.Row="1"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="15"
                           Cursor="Hand"/>

                <TextBlock Grid.Row="1"
                           Foreground="#999"
                           FontWeight="Normal"
                           FontSize="12"
                           Margin="0,3,0,0">
                    <TextBlock.Text>
                        <MultiBinding Converter="{StaticResource LastOnlineConverter}">
                            <Binding Path="SelectedUser.LastOnlineDate"/>
                            <Binding Path="SelectedUser.Online"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </Border>

        <ScrollViewer x:Name="ChatScrollViewer"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Hidden"
                      Grid.Row="1" Margin="0,0,0,45" Grid.RowSpan="2"
                      Background="#121212">

            <!-- <ScrollViewer.Background>
                <ImageBrush ImageSource="pack://application:,,,/Public/assets/chat-bg.jpg"
                    Stretch="UniformToFill"
                    Opacity="0.4"/>
            </ScrollViewer.Background> -->

            <ItemsControl ItemsSource="{Binding Messages}" Margin="0,12,0,12">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="15,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Background="#222"
                                    CornerRadius="15,17,17,4"
                                    Padding="13,4,15,4"
                                    HorizontalAlignment="Left"
                                    MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ActualWidth, Converter={StaticResource WidthLimitConverter}}"
                                    Visibility="{Binding IsMine, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding Content}"
                                             Cursor="IBeam"
                                             Foreground="White"
                                             FontSize="13"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             IsReadOnly="True"
                                             TextWrapping="Wrap"
                                             Padding="0"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left"
                                             Focusable="True"
                                             IsTabStop="False"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding DeliveredAt, StringFormat={}{0:HH:mm}}"
                                               Foreground="#888"
                                               FontSize="12"
                                               Margin="14,9,0,0"
                                               VerticalAlignment="Bottom"/>
                                </Grid>
                            </Border>

                            <Border Background="#004594"
                                    CornerRadius="17,15,4,17"
                                    Padding="10,4,13,4"
                                    HorizontalAlignment="Right"
                                    MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ActualWidth, Converter={StaticResource WidthLimitConverter}}"
                                    Visibility="{Binding IsMine, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding Content}"
                                             Cursor="IBeam"
                                             Foreground="White"
                                             FontSize="13"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             IsReadOnly="True"
                                             TextWrapping="Wrap"
                                             Padding="0"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left"
                                             Focusable="True"
                                             IsTabStop="False"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding DeliveredAt, StringFormat={}{0:HH:mm}}"
                                               Foreground="#ccc"
                                               FontSize="12"
                                               Margin="14,9,0,0"
                                               VerticalAlignment="Bottom"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid>
                <TextBox Grid.Column="0"
                        x:Name="MessageBox"
                        Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                        MinHeight="40"
                        VerticalAlignment="Center"
                        Padding="10,13,55,13"
                        FontSize="14"
                        Background="#111"
                        Foreground="White"
                        BorderThickness="0"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        MaxHeight="120"
                        PreviewKeyDown="MessageBox_PreviewKeyDown"/>

                <TextBlock Text="Сообщение..."
                           Foreground="#999"
                           FontSize="14"
                           Padding="16,13,55,13"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           Panel.ZIndex="1"
                           Visibility="{Binding Text, ElementName=MessageBox, 
                                        Converter={StaticResource InverseStringToVisibilityConverter}}"/>
            </Grid>

            <Button Grid.Column="1"
                    FontSize="18"
                    Background="Transparent"
                    Foreground="White"
                    Width="50"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    BorderThickness="0"
                    Margin="5,0,5,0"
                    Cursor="Hand">
                <Image Source="pack://application:,,,/Public/ico/send.png" MaxWidth="21" RenderOptions.BitmapScalingMode="HighQuality" />

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</UserControl>

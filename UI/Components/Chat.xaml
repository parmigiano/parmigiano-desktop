<UserControl x:Class="Parmigiano.UI.Components.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Parmigiano.UI.Components"
             xmlns:controllers="clr-namespace:Parmigiano.UI.Controllers"
             xmlns:vm="clr-namespace:Parmigiano.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/UI/Resources/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#111" Padding="20,10,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0" MouseLeftButtonUp="ProfileHeader_Click" Cursor="Hand">
                    <TextBlock Text="{Binding SelectedUser.Name}" Grid.Row="1"
                               Foreground="White"
                               FontWeight="SemiBold"
                               FontSize="15"/>

                    <TextBlock Grid.Row="1"
                               FontWeight="Normal"
                               FontSize="12"
                               Margin="0,3,0,0">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource TypingOrOnlineConverter}">
                                <Binding Path="SelectedUser.IsTyping"/>
                                <Binding Path="SelectedUser.Online"/>
                                <Binding Path="SelectedUser.LastOnlineDate"/>
                            </MultiBinding>
                        </TextBlock.Text>

                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#999"/>

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedUser.Online}" Value="True">
                                        <Setter Property="Foreground" Value="#2499ff"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <Image Source="pack://application:,,,/Public/ico/settings.png"
                       Grid.Column="1"
                       MaxWidth="18"
                       VerticalAlignment="Center"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Cursor="Hand"
                       MouseLeftButtonUp="ChatBackground_MouseLeftButtonUp">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,0,0,75" Grid.RowSpan="2">
            <ScrollViewer x:Name="ChatScrollViewer"
                          HorizontalScrollBarVisibility="Hidden"
                          VerticalScrollBarVisibility="Hidden">

                <StackPanel VerticalAlignment="Center" MaxWidth="1100">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,40,0,0">

                        <Grid Width="90" Height="90" ClipToBounds="False" Cursor="Hand">
                            <Ellipse Width="90" Height="90"
                                     Panel.ZIndex="1"
                                     Visibility="{Binding SelectedUser.Avatar, Converter={StaticResource StringToVisibilityConverter}}" 
                                     RenderOptions.BitmapScalingMode="HighQuality">
                                <Ellipse.Fill>
                                    <Binding Path="SelectedUser.Avatar" Converter="{StaticResource AsyncImageConverter}" />
                                </Ellipse.Fill>
                            </Ellipse>

                            <Border Width="90" Height="90" CornerRadius="1000" 
                                    Background="{Binding SelectedUser.Username, Converter={StaticResource UsernameToColorConverter}}"
                                    Visibility="{Binding SelectedUser.Avatar, Converter={StaticResource InverseStringToVisibilityConverter}}"
                                    VerticalAlignment="Center" HorizontalAlignment="Center">

                                <TextBlock Text="{Binding SelectedUser.Username, Converter={StaticResource UsernameToInitialConverter}}"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           FontSize="30"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <TextBox Grid.Column="0"
                                 Text="{Binding SelectedUser.Username}"
                                 Cursor="IBeam"
                                 Foreground="White"
                                 FontWeight="SemiBold"
                                 FontSize="17"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Margin="0,10,0,3"
                                 Focusable="True"
                                 IsTabStop="False"/>

                        <TextBox Grid.Column="0"
                                 Text="{Binding SelectedUser.Email}"
                                 Cursor="IBeam"
                                 Foreground="#ccc"
                                 FontSize="13"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Focusable="True"
                                 IsTabStop="False">

                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedUser.EmailVisible}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>

                        </TextBox>

                        <TextBlock Text="Самое время начать переписку — просто отправьте сообщение."
                                   MaxWidth="250"
                                   Margin="0,13,0,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Foreground="#ccc"
                                   FontSize="12"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <ItemsControl ItemsSource="{Binding Messages}" x:Name="MessagesListView" Margin="0,50,0,12">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="15,4">
                                    <Grid.ContextMenu>
                                        <ContextMenu Opened="MessageContextMenu_Opened" Background="#111" Foreground="#fff" BorderBrush="#333" BorderThickness="1">
                                            <ContextMenu.Resources>
                                                <Style TargetType="MenuItem">
                                                    <Setter Property="Padding" Value="10,5"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                </Style>
                                            </ContextMenu.Resources>

                                            <MenuItem Header="Изменить"
                                                      Command="{Binding EditMessageCommand}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                            <MenuItem Header="Удалить"
                                                      Command="{Binding DeleteMessageCommand}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                            <MenuItem Header="Закрепить"/>
                                            <MenuItem Header="Копировать"
                                                      Command="{Binding CopyMessageCommand}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        </ContextMenu>
                                    </Grid.ContextMenu>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border Background="#222"
                                            CornerRadius="15,17,17,4"
                                            Padding="13,4,15,4"
                                            BorderBrush="#444"
                                            BorderThickness="1"
                                            HorizontalAlignment="Left"
                                            MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ActualWidth, Converter={StaticResource WidthLimitConverter}}"
                                            Visibility="{Binding IsMine, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBox Grid.Column="0" 
                                                     Cursor="IBeam"
                                                     Foreground="White"
                                                     FontSize="13"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     IsReadOnly="True"
                                                     TextWrapping="Wrap"
                                                     Padding="0"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Left"
                                                     Focusable="True"
                                                     IsTabStop="False">
                                                <TextBox.Text>
                                                    <MultiBinding Converter="{StaticResource MessageContentConverter}">
                                                        <Binding Path="EditContent"/>
                                                        <Binding Path="Content"/>
                                                    </MultiBinding>
                                                </TextBox.Text>
                                            </TextBox>

                                            <StackPanel Grid.Column="1" 
                                                        Orientation="Horizontal" 
                                                        HorizontalAlignment="Right"
                                                        Margin="10,9,0,0">
                                                <TextBlock Text="изменено"
                                                           Foreground="#ccc"
                                                           FontSize="12"
                                                           VerticalAlignment="Bottom">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsEdited}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <TextBlock Text="{Binding DeliveredAt, Converter={StaticResource UtcToLocalTimeConverter}}"
                                                           Foreground="#ccc"
                                                           FontSize="12"
                                                           Margin="5,0,0,0"
                                                           VerticalAlignment="Bottom"/>
                                            </StackPanel>


                                        </Grid>
                                    </Border>

                                    <!-- #004594 -->
                                    <Border Background="#222"
                                            CornerRadius="17,15,4,17"
                                            Padding="10,4,13,4"
                                            HorizontalAlignment="Right"
                                            BorderBrush="#444"
                                            BorderThickness="1"
                                            MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ActualWidth, Converter={StaticResource WidthLimitConverter}}"
                                            Visibility="{Binding IsMine, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBox Grid.Column="0" 
                                                     Cursor="IBeam"
                                                     Foreground="White"
                                                     FontSize="13"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     IsReadOnly="True"
                                                     TextWrapping="Wrap"
                                                     Padding="0"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Left"
                                                     Focusable="True"
                                                     IsTabStop="False">
                                                <TextBox.Text>
                                                    <MultiBinding Converter="{StaticResource MessageContentConverter}">
                                                        <Binding Path="EditContent"/>
                                                        <Binding Path="Content"/>
                                                    </MultiBinding>
                                                </TextBox.Text>
                                            </TextBox>

                                            <StackPanel Grid.Column="1" 
                                                        Orientation="Horizontal" 
                                                        HorizontalAlignment="Right"
                                                        Margin="10,9,0,0">
                                                <TextBlock Text="изменено"
                                                           Foreground="#ccc"
                                                           FontSize="12"
                                                           VerticalAlignment="Bottom">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsEdited}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <TextBlock Text="{Binding DeliveredAt, Converter={StaticResource UtcToLocalTimeConverter}}"
                                                           Foreground="#ccc"
                                                           FontSize="12"
                                                           Margin="5,0,0,0"
                                                           VerticalAlignment="Bottom"/>

                                                <Image MaxWidth="17"
                                                       Margin="5,0,0,0"
                                                       VerticalAlignment="Bottom"
                                                       RenderOptions.BitmapScalingMode="HighQuality"
                                                       Source="{Binding ReadAt, Converter={StaticResource ReadAtToIconConverter}}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <Border x:Name="ScrollToBottomButton"
                    Width="34" Height="34"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="20"
                    Background="#333"
                    BorderBrush="#444"
                    BorderThickness="1"
                    Cursor="Hand"
                    CornerRadius="50"
                    Visibility="Collapsed"
                    MouseLeftButtonUp="ScrollToBottomButton_MouseLeftButtonUp">
                <Image VerticalAlignment="Center" 
                       RenderOptions.BitmapScalingMode="HighQuality" 
                       MaxWidth="22" 
                       Margin="0,3,0,0" 
                       Source="pack://application:,,,/Public/ico/chevron-down.png" />
            </Border>
        </Grid>

        <Grid Grid.Row="2" Margin="0,10,0,0" Background="#111">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBox x:Name="MessageBox"
                         Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                         MinHeight="40"
                         VerticalAlignment="Center"
                         Padding="10,13"
                         FontSize="14"
                         Background="#111"
                         Foreground="White"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         MaxHeight="120"
                         BorderBrush="#222"
                         BorderThickness="0,1,0,0"
                         PreviewKeyDown="MessageBox_PreviewKeyDown">

                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChatSetting.Blocked}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>

                </TextBox>

                <TextBlock Text="Сообщение..."
                           Foreground="#999"
                           FontSize="14"
                           Padding="16,13,55,13"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           Panel.ZIndex="1">
                    <TextBlock.Visibility>
                        <MultiBinding Converter="{StaticResource PlaceholderVisibilityConverter}">
                            <Binding ElementName="MessageBox" Path="Text"/>
                            <Binding Path="ChatSetting.Blocked"/>
                        </MultiBinding>
                    </TextBlock.Visibility>
                </TextBlock>

                <TextBlock Text="Пользователь заблокирован, вы не можете писать"
                           Foreground="Red"
                           FontSize="14"
                           Padding="0,28"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChatSetting.Blocked}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Button Grid.Row="1"
                    Command="{Binding SendMessageCommand}"
                    FontSize="18"
                    Background="#004594"
                    Foreground="White"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    BorderThickness="0"
                    Margin="0,0,10,10"
                    Cursor="Hand">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ChatSetting.Blocked}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,3">
                    <TextBlock Text="Отправить" 
                               Foreground="#fff"
                               FontWeight="Medium"
                               FontSize="12"/>
                    <Image Source="pack://application:,,,/Public/ico/send.png" MaxWidth="15" RenderOptions.BitmapScalingMode="HighQuality" Margin="10,0,0,0" />
                </StackPanel>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#004594"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#175eb0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <local:ChatLoader Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                          Grid.RowSpan="3"
                          Panel.ZIndex="999" />
    </Grid>
</UserControl>

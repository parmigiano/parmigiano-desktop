<UserControl x:Class="Parmigiano.UI.Components.UsersList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parmigiano.UI.Components"
             xmlns:controllers="clr-namespace:Parmigiano.UI.Controllers"
             xmlns:vm="clr-namespace:Parmigiano.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">

    <UserControl.DataContext>
        <vm:UsersViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/UI/Resources/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="#111">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:UserMeCard Grid.Row="0" />

            <TextBlock Text="Сообщения" Grid.Row="1"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="17"
                       Margin="13,10,10,13"/>

            <TextBlock Text="В чате пока нет ни одного пользователя"
                       Grid.Row="2"
                       Foreground="#666"
                       FontSize="13"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Panel.ZIndex="10"
                       Margin="0,-130,0,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasUsers}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <ListBox ItemsSource="{Binding Users}" Grid.Row="2"
                        Background="#111111"
                        HorizontalContentAlignment="Stretch"
                        BorderThickness="0"
                        PreviewMouseWheel="ListBox_PreviewMouseWheel"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedUser}"
                        SelectionChanged="ListBox_SelectionChanged">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            BorderThickness="0"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#212121"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#004594"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0,1,0,0"
                                BorderBrush="#212121"
                                Background="Transparent"
                                Padding="10"
                                HorizontalAlignment="Stretch">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Width="54" Height="54" ClipToBounds="False">
                                    <Ellipse Width="54" Height="54"
                                             Panel.ZIndex="1"
                                             Visibility="{Binding Avatar, Converter={StaticResource StringToVisibilityConverter}}" 
                                             RenderOptions.BitmapScalingMode="HighQuality">
                                        <Ellipse.Fill>
                                            <Binding Path="Avatar" Converter="{StaticResource AsyncImageConverter}" />
                                        </Ellipse.Fill>
                                    </Ellipse>

                                    <Border Width="54" Height="54" CornerRadius="27" 
                                            Background="{Binding Username, Converter={StaticResource UsernameToColorConverter}}"
                                            Visibility="{Binding Avatar, Converter={StaticResource InverseStringToVisibilityConverter}}"
                                            VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Username, Converter={StaticResource UsernameToInitialConverter}}"
                                                   Foreground="White"
                                                   FontWeight="Bold"
                                                   FontSize="20"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <Ellipse Width="12" Height="12"
                                             Stroke="#111111"
                                             StrokeThickness="2"
                                             Fill="#156fd6"
                                             VerticalAlignment="Bottom"
                                             HorizontalAlignment="Right"
                                             Margin="2"
                                             Panel.ZIndex="2"
                                             Visibility="{Binding Online, Converter={StaticResource BoolToVisibilityConverter}}" />
                                </Grid>

                                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Username}"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               FontSize="15"/>
                                    <TextBlock Text="{Binding LastMessage, Converter={StaticResource LastMessageConverter}}"
                                               Foreground="#ccc"
                                               Margin="0,5,0,0"
                                               FontSize="13"
                                               TextTrimming="CharacterEllipsis"
                                               TextAlignment="Left"
                                               HorizontalAlignment="Stretch"
                                               Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=StackPanel}}">

                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</UserControl>

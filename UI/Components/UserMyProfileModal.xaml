<UserControl x:Class="Parmigiano.UI.Components.UserMyProfileModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parmigiano.UI.Components"
             mc:Ignorable="d"
             Opacity="0"
             Visibility="Collapsed"
             d:DesignHeight="700" d:DesignWidth="1100"
             TextOptions.TextRenderingMode="ClearType">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/UI/Resources/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="Root"
          Background="#80000000"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          MouseDown="Root_MouseDown">

        <Border x:Name="Dialog"
                Background="#111"
                BorderBrush="#333"
                BorderThickness="1"
                CornerRadius="12"
                Width="400"
                MaxWidth="400"
                MaxHeight="550"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,15,15,0">
                    <Image Source="pack://application:,,,/Public/ico/x.png" 
                           MaxWidth="19" 
                           RenderOptions.BitmapScalingMode="HighQuality"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           MouseLeftButtonUp="Close_Click"
                           Cursor="Hand">

                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>

                    </Image>
                </Grid>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="0,10,0,0">
                    <StackPanel>
                        <Grid Width="100" Height="100" Cursor="Hand" MouseLeftButtonUp="AvatarGrid_MouseLeftButtonUp">
                            <Ellipse x:Name="AvatarCircle" RenderOptions.BitmapScalingMode="HighQuality">
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="AvatarImage" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <Border Background="#857a00" 
                                    MaxWidth="20" 
                                    MaxHeight="20" 
                                    CornerRadius="100" 
                                    VerticalAlignment="Bottom" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,0,10,-1"
                                    Panel.ZIndex="100"
                                    Padding="3">

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding EmailConfirmed}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Image Source="pack://application:,,,/Public/ico/star.png" MaxWidth="13" />
                            </Border>

                            <TextBlock x:Name="InitialText"
                                       Visibility="Collapsed"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="35"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>

                            <Rectangle x:Name="HoverOverlay"
                                       Fill="Black"
                                       Opacity="0"
                                       RadiusX="100"
                                       RadiusY="100"/>

                            <Image x:Name="CameraIcon" Opacity="0" Source="pack://application:,,,/Public/ico/camera.png" MaxWidth="25" RenderOptions.BitmapScalingMode="HighQuality" />

                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.6"
                                                             Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="CameraIcon"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0"
                                                             Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="CameraIcon"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0"
                                                             Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Grid.Triggers>
                        </Grid>

                        <TextBlock Text="{Binding Name}"
                                   Foreground="#fff"
                                   FontSize="17"
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"
                                   Grid.Row="2"
                                   Margin="0,13,0,20"/>

                        <Border Background="#222" Padding="15,10,15,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="1" 
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Text="{Binding Overview, UpdateSourceTrigger=PropertyChanged}"
                                         x:Name="OverviewTextBox"
                                         TextChanged="Input_TextChanged"
                                         Foreground="#fff"
                                         FontSize="14"
                                         Margin="0,0,0,4"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Width="280"
                                         TextAlignment="Right"
                                         Padding="10,5,10,5"/>

                                <TextBlock Grid.Column="0" 
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Text="О себе"
                                           Foreground="#ccc"
                                           FontSize="13"/>
                            </Grid>
                        </Border>

                        <Border Background="#222" Padding="15,10,15,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="1" 
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                         x:Name="NameTextBox"
                                         TextChanged="Input_TextChanged"
                                         Foreground="#fff"
                                         FontSize="14"
                                         Margin="0,0,0,4"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Width="220"
                                         TextAlignment="Right"
                                         Padding="10,5,10,5"/>

                                <TextBlock Grid.Column="0" 
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Text="Имя"
                                           Foreground="#ccc"
                                           FontSize="13"/>
                            </Grid>
                        </Border>

                        <Border Background="#222" Padding="15,10,15,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="1" 
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                         x:Name="UsernameTextBox"
                                         TextChanged="Input_TextChanged"
                                         Foreground="#fff"
                                         FontSize="14"
                                         Margin="0,0,0,4"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Width="220"
                                         TextAlignment="Right"
                                         Padding="10,5,10,5"/>

                                <TextBlock Grid.Column="0" 
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Text="Имя пользователя"
                                           Foreground="#ccc"
                                           FontSize="13"/>
                            </Grid>
                        </Border>

                        <Border Background="#222" Padding="15,10,15,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="1" 
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                                         x:Name="PhoneTextBox"
                                         TextChanged="Input_TextChanged"
                                         Foreground="#fff"
                                         FontSize="14"
                                         Margin="0,0,0,4"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Width="280"
                                         TextAlignment="Right"
                                         Padding="10,5,10,5"/>

                                <TextBlock Grid.Column="0" 
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Text="Телефон"
                                           Foreground="#ccc"
                                           FontSize="13"/>
                            </Grid>
                        </Border>

                        <Border Background="#222" Padding="15,10,15,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="1" 
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                         x:Name="EmailTextBox"
                                         TextChanged="Input_TextChanged"
                                         Foreground="#fff"
                                         FontSize="14"
                                         Margin="0,0,0,4"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Width="280"
                                         TextAlignment="Right"
                                         Padding="10,5,10,5"/>

                                <TextBlock Grid.Column="0" 
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Text="Ел. Почта"
                                           Foreground="#ccc"
                                           FontSize="13"/>
                            </Grid>
                        </Border>

                        <Border Padding="15,10">
                            <StackPanel>
                                <Grid Margin="0,5,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Делать почту публичной" 
                                               Grid.Column="0"
                                               FontSize="13"
                                               VerticalAlignment="Center"
                                               Foreground="#fff" />

                                    <CheckBox x:Name="EmailToggle" 
                                              Grid.Column="1" 
                                              Width="50" Height="20" 
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Right"
                                              Cursor="Hand"
                                              IsChecked="{Binding EmailVisible}">
                                        <CheckBox.Template>
                                            <ControlTemplate TargetType="CheckBox">
                                                <Grid Width="50" Height="20">
                                                    <Border x:Name="EmailToggleSwitchBackground" 
                                                            CornerRadius="10" 
                                                            Background="Gray" />

                                                    <Ellipse x:Name="EmailToggleSwitchThumb" Width="15" Height="15" Fill="White" 
                                                            Margin="2" HorizontalAlignment="Left">
                                                        <Ellipse.RenderTransform>
                                                            <TranslateTransform x:Name="EmailToggleSwitchThumbTransform" />
                                                        </Ellipse.RenderTransform>
                                                    </Ellipse>

                                                </Grid>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="EmailToggleSwitchThumbTransform"
                                                                 Storyboard.TargetProperty="X"
                                                                 To="30"
                                                                 Duration="0:0:0.2"/>
                                                                    <ColorAnimation Storyboard.TargetName="EmailToggleSwitchBackground"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="Green"
                                                                Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="EmailToggleSwitchThumbTransform"
                                                                 Storyboard.TargetProperty="X"
                                                                 To="0"
                                                                 Duration="0:0:0.2"/>
                                                                    <ColorAnimation Storyboard.TargetName="EmailToggleSwitchBackground"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="Gray"
                                                                Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>
                                        </CheckBox.Template>
                                    </CheckBox>
                                </Grid>

                                <Grid Margin="0,3,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Делать ник публичным" 
                                               Grid.Column="0"
                                               FontSize="13"
                                               VerticalAlignment="Center"
                                               Foreground="#fff" />

                                    <CheckBox x:Name="UsernameToggle" 
                                              Grid.Column="1" 
                                              Width="50" Height="20" 
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Right"
                                              Cursor="Hand"
                                              IsChecked="{Binding UsernameVisible}">
                                        <CheckBox.Template>
                                            <ControlTemplate TargetType="CheckBox">
                                                <Grid Width="50" Height="20">
                                                    <Border x:Name="UsernameToggleSwitchBackground" 
                                                            CornerRadius="10" 
                                                            Background="Gray" />

                                                    <Ellipse x:Name="UsernameToggleSwitchThumb" Width="15" Height="15" Fill="White" 
                                                                Margin="2" HorizontalAlignment="Left">
                                                        <Ellipse.RenderTransform>
                                                            <TranslateTransform x:Name="UsernameToggleSwitchThumbTransform" />
                                                        </Ellipse.RenderTransform>
                                                    </Ellipse>

                                                </Grid>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="UsernameToggleSwitchThumbTransform"
                                                                 Storyboard.TargetProperty="X"
                                                                 To="30"
                                                                 Duration="0:0:0.2"/>
                                                                    <ColorAnimation Storyboard.TargetName="UsernameToggleSwitchBackground"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="Green"
                                                                Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="UsernameToggleSwitchThumbTransform"
                                                                 Storyboard.TargetProperty="X"
                                                                 To="0"
                                                                 Duration="0:0:0.2"/>
                                                                    <ColorAnimation Storyboard.TargetName="UsernameToggleSwitchBackground"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="Gray"
                                                                Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>
                                        </CheckBox.Template>
                                    </CheckBox>
                                </Grid>

                                <Grid Margin="0,3,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Делать телефон публичным" 
                                               Grid.Column="0"
                                               FontSize="13"
                                               VerticalAlignment="Center"
                                               Foreground="#fff" />

                                    <CheckBox x:Name="PhoneToggle" 
                                              Grid.Column="1" 
                                              Width="50" Height="20" 
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Right"
                                              Cursor="Hand"
                                              IsChecked="{Binding PhoneVisible}">
                                        <CheckBox.Template>
                                            <ControlTemplate TargetType="CheckBox">
                                                <Grid Width="50" Height="20">
                                                    <Border x:Name="PhoneToggleSwitchBackground" 
                                                            CornerRadius="10" 
                                                            Background="Gray" />

                                                    <Ellipse x:Name="PhoneToggleSwitchThumb" Width="15" Height="15" Fill="White" 
                                                                Margin="2" HorizontalAlignment="Left">
                                                        <Ellipse.RenderTransform>
                                                            <TranslateTransform x:Name="PhoneToggleSwitchThumbTransform" />
                                                        </Ellipse.RenderTransform>
                                                    </Ellipse>

                                                </Grid>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="PhoneToggleSwitchThumbTransform"
                                                                                     Storyboard.TargetProperty="X"
                                                                                     To="30"
                                                                                     Duration="0:0:0.2"/>
                                                                    <ColorAnimation Storyboard.TargetName="PhoneToggleSwitchBackground"
                                                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                    To="Green"
                                                                                    Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="PhoneToggleSwitchThumbTransform"
                                                                                     Storyboard.TargetProperty="X"
                                                                                     To="0"
                                                                                     Duration="0:0:0.2"/>
                                                                    <ColorAnimation Storyboard.TargetName="PhoneToggleSwitchBackground"
                                                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                    To="Gray"
                                                                                    Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>
                                        </CheckBox.Template>
                                    </CheckBox>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="После нажатия на «Удалить аккаунт» ваш аккаунт будет безвозвратно удалён. Все данные будут полностью стёрты. Дополнительного подтверждения не будет."
                                   TextWrapping="Wrap" Margin="0,10,0,0"
                                   FontSize="11"
                                   Foreground="#ccc"
                                   Padding="10,7,10,7" />

                        <Border Margin="0,10,0,0"
                                Padding="10,7,10,7" 
                                CornerRadius="0,0,12,12"
                                Cursor="Hand"
                                MouseLeftButtonUp="DeleteAccount_MouseLeftButtonUp">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="1" 
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Text="Удалить"
                                           Foreground="#fff"
                                           FontSize="14"
                                           Margin="0,0,0,4"
                                           Width="280"
                                           TextAlignment="Right"
                                           Padding="10,5,10,5"/>

                                <TextBlock Grid.Column="0" 
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Text="Удалить аккаунт?"
                                           Foreground="#fff"
                                           FontSize="13"/>
                            </Grid>

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#7f0000" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>

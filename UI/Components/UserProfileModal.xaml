<UserControl x:Class="Parmigiano.UI.Components.UserProfileModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parmigiano.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             Visibility="Collapsed"
             Opacity="0">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/UI/Resources/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="Root"
          Background="#80000000"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          MouseDown="Root_MouseDown">

        <Border x:Name="Dialog"
                Background="#111"
                BorderBrush="#333"
                BorderThickness="1"
                CornerRadius="12"
                Width="400"
                MaxWidth="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="20,15,15,0">
                        <Image Source="pack://application:,,,/Public/ico/x.png" 
                               MaxWidth="19" 
                               RenderOptions.BitmapScalingMode="HighQuality"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               MouseLeftButtonUp="Close_Click"
                               Cursor="Hand">

                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>

                        </Image>
                    </Border>

                    <Grid Width="100" Height="100" Cursor="Hand" Grid.Row="1" MouseLeftButtonUp="Avatar_Click">
                        <Ellipse x:Name="AvatarCircle" RenderOptions.BitmapScalingMode="HighQuality">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="AvatarImage" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <Border Background="#857a00" 
                                MaxWidth="20" 
                                MaxHeight="20" 
                                CornerRadius="100" 
                                VerticalAlignment="Bottom" 
                                HorizontalAlignment="Right" 
                                Margin="0,0,10,-1"
                                Panel.ZIndex="100"
                                Padding="3">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding EmailConfirmed}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Image Source="pack://application:,,,/Public/ico/star.png" MaxWidth="13" />
                        </Border>

                        <TextBlock x:Name="InitialText"
                                   Visibility="Collapsed"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="35"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>

                        <Rectangle x:Name="HoverOverlay"
                                   Fill="Black"
                                   Opacity="0"
                                   RadiusX="100"
                                   RadiusY="100"/>
                    </Grid>

                    <TextBlock Text="{Binding Name}" 
                               Foreground="#fff"
                               FontSize="16"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               Grid.Row="2"
                               Margin="0,13,0,0"/>

                    <TextBlock Grid.Row="3"
                               FontWeight="Normal"
                               HorizontalAlignment="Center"
                               FontSize="13"
                               Margin="0,3,0,25">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource LastOnlineConverter}">
                                <Binding Path="LastOnlineDate"/>
                                <Binding Path="Online"/>
                            </MultiBinding>
                        </TextBlock.Text>

                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#999"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Online}" Value="True">
                                        <Setter Property="Foreground" Value="#2499ff"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <Border Grid.Row="4" Background="#222" Padding="15,10,15,10">
                        <StackPanel>
                            <TextBlock Text="{Binding Overview}"
                                       Foreground="#fff"
                                       FontSize="14"
                                       Margin="0,0,0,4"
                                       Cursor="Hand"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="О себе"
                                       Foreground="#ccc"
                                       FontSize="12"/>
                        </StackPanel>

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <!-- Overview не null -->
                                            <Condition Binding="{Binding Overview, Converter={StaticResource NullToVisibilityConverter}}" Value="Visible"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <Border Grid.Row="5" Background="#222" Padding="15,10,15,10">
                        <StackPanel>
                            <TextBlock Text="{Binding Username}"
                                       Foreground="#fff"
                                       FontSize="14"
                                       Margin="0,0,0,4"
                                       Cursor="Hand"/>

                            <TextBlock Text="Имя пользователя"
                                       Foreground="#ccc"
                                       FontSize="12"/>
                        </StackPanel>

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding UsernameVisible}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <Border Grid.Row="6" Background="#222" Padding="15,10,15,10">
                        <StackPanel>
                            <TextBlock Text="{Binding Email}"
                                       Foreground="#fff"
                                       FontSize="14"
                                       Margin="0,0,0,4"
                                       Cursor="Hand"/>

                            <TextBlock Text="Электронная почта"
                                       Foreground="#ccc"
                                       FontSize="12"/>
                        </StackPanel>

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EmailVisible}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <Border Grid.Row="7" Background="#222" Padding="15,10,15,10" CornerRadius="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="{Binding Phone}"
                                       Foreground="#fff"
                                       FontSize="14"
                                       Margin="0,0,0,4"
                                       Cursor="Hand"/>

                            <TextBlock Text="Телефон"
                                       Foreground="#ccc"
                                       FontSize="12"/>
                        </StackPanel>

                        <Border.Visibility>
                            <MultiBinding Converter="{StaticResource PhoneVisibleMultiConverter}">
                                <Binding Path="PhoneVisible" />
                                <Binding Path="Phone" />
                            </MultiBinding>
                        </Border.Visibility>
                    </Border>

                    <Border Grid.Row="8" 
                            Margin="0,10,0,0"
                            Padding="10,7,10,7" 
                            CornerRadius="0,0,12,12"
                            Cursor="Hand">
                        <TextBlock HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Text="Заблокировать"
                                   Foreground="#fff"
                                   FontSize="14"
                                   Margin="0,0,0,4"
                                   Width="280"
                                   Padding="10,5,10,5"/>

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Transparent" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7f0000" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

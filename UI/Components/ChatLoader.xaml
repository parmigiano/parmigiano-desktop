<UserControl x:Class="Parmigiano.UI.Components.ChatLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parmigiano.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#000">
    <Grid>
        <Grid.Background>
            <VisualBrush Opacity="0.085" Stretch="UniformToFill">
                <VisualBrush.Visual>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="pack://application:,,,/Public/assets/chat-bg-1.png" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Image Grid.Column="1" Source="pack://application:,,,/Public/assets/chat-bg-1.png" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Grid>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Ellipse Width="40" Height="40" Stroke="#fff" StrokeThickness="7" StrokeDashArray="9 78" RenderTransformOrigin="0.5 0.5" Margin="0 0 0 20">
                <Ellipse.RenderTransform>
                    <RotateTransform x:Name="Rotation" Angle="0" />
                </Ellipse.RenderTransform>

                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="Rotation" Storyboard.TargetProperty="Angle" From="0" To="360" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
            <Label Foreground="#fff"
           Content="Подождите... Мы загружаем все, что вам нужно." FontSize="13" />
        </StackPanel>
    </Grid>
</UserControl>

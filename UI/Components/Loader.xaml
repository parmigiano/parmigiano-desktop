<UserControl x:Class="Parmigiano.UI.Components.Loader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parmigiano.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="17" d:DesignWidth="17">
    <Grid>
        <Ellipse Width="17" Height="17" Stroke="Gray" StrokeThickness="3" Opacity="0.3"/>

        <Path Stroke="White" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="8.5,0">
                        <ArcSegment x:Name="ArcSegment" Point="16,8.5" Size="8.5,8.5" IsLargeArc="False" SweepDirection="Clockwise"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
            <Path.RenderTransform>
                <RotateTransform x:Name="RotateTransform" CenterX="8.5" CenterY="8.5" Angle="0"/>
            </Path.RenderTransform>
        </Path>
    </Grid>
</UserControl>

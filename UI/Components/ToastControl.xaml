<UserControl x:Class="Parmigiano.UI.Components.ToastControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Parmigiano.UI.Components"
             mc:Ignorable="d" 
             Width="350" Height="50" Opacity="0">
    <Grid>
        <Border x:Name="ToastBorder"
                Background="#333"
                CornerRadius="8"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                RenderTransformOrigin="0.5,0">
            <Border.RenderTransform>
                <TranslateTransform x:Name="TranslateTransform" Y="-30"/>
            </Border.RenderTransform>
            <TextBlock x:Name="MessageText"
                       Foreground="White"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>

            <ItemsControl MaxWidth="400" Padding="10" Width="400">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 10" VerticalAlignment="Center">
                                <Border Width="48" Height="48" CornerRadius="50"
                                        Background="#222" Margin="0 0 12 0">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard Storyboard="{StaticResource SkeletonAnimation}" />
                                        </EventTrigger>
                                    </Border.Triggers>
                                </Border>

                                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                    <Border Width="120" Height="14" CornerRadius="3" Background="#333" Margin="0 0 0 6" HorizontalAlignment="Left">
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard Storyboard="{StaticResource SkeletonAnimation}" />
                                            </EventTrigger>
                                        </Border.Triggers>
                                    </Border>

                                    <Border Width="240" Height="10" CornerRadius="3" Background="#222">

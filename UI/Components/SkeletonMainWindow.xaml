                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard Storyboard="{StaticResource SkeletonAnimation}" />
                                            </EventTrigger>
                                        </Border.Triggers>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <x:Array Type="{x:Type sys:Object}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <sys:Object />
                    <sys:Object />
                    <sys:Object />
                    <sys:Object />
                    <sys:Object />
                </x:Array>
            </ItemsControl>
        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Ellipse Width="40" Height="40" Stroke="#fff" StrokeThickness="7" StrokeDashArray="9 78" RenderTransformOrigin="0.5 0.5" Margin="0 0 0 20">
                <Ellipse.RenderTransform>
                    <RotateTransform x:Name="Rotation" Angle="0" />
                </Ellipse.RenderTransform>

                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="Rotation" Storyboard.TargetProperty="Angle" From="0" To="360" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
            <Label Foreground="#fff"
                   Content="Подождите... Мы загружаем все, что вам нужно." FontSize="13" />
        </StackPanel>
    </Grid>

<Window x:Class="Parmigiano.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parmigiano"
        xmlns:components="clr-namespace:Parmigiano.UI.Components"
        xmlns:controllers="clr-namespace:Parmigiano.UI.Controllers"
        mc:Ignorable="d"
        Icon="pack://application:,,,/Public/assets/logo-ico.ico"
        Title="{Binding WindowTitle}"
        Height="700" Width="1100" MinHeight="550" MinWidth="910"
        WindowStartupLocation="CenterScreen"
        Background="#000">

    <Window.Resources>
        <controllers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="410" MinWidth="300" MaxWidth="550"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <components:UsersList x:Name="UsersListControl" Grid.Column="0" />

        <GridSplitter Grid.Column="1"
                      Width="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="#111"
                      ResizeBehavior="PreviousAndNext"
                      ResizeDirection="Columns">
            <GridSplitter.Template>
                <ControlTemplate TargetType="GridSplitter">
                    <Border Background="{TemplateBinding Background}" SnapsToDevicePixels="True" />
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <Grid Grid.Column="2">
            <TextBlock Text="Выберите, кому хотели бы написать"
                       x:Name="PlaceholderText"
                       Foreground="#666"
                       FontSize="14"
                       FontWeight="Medium"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding SelectedUser, 
                                    Converter={StaticResource NullToVisibilityConverter}, 
                                    ConverterParameter=Inverse}" />

            <components:Chat x:Name="ChatControl" 
                             Visibility="Collapsed"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"/>
        </Grid>

        <components:SkeletonMainWindow x:Name="SkeletonOverlay" 
                                       Grid.ColumnSpan="3"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Visibility="Collapsed"
                                       Panel.ZIndex="100"
                                       Background="#000"/>
    </Grid>
</Window>

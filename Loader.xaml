<Window x:Class="Parmigiano.Loader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parmigiano"
        xmlns:components="clr-namespace:Parmigiano.UI.Components"
        mc:Ignorable="d"
        Icon="pack://application:,,,/Public/assets/logo-ico.ico"
        Title="Parmigiano Chat"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStyle="None"
        Topmost="True"
        Background="Transparent">

    <Border CornerRadius="10" Background="#000">
        <Grid>
            <!-- Notification Toast-->
            <components:Notification x:Name="Notification" Grid.ColumnSpan="2" Panel.ZIndex="10000" />
            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="pack://application:,,,/Public/assets/logo-bg-none.png" MaxWidth="100" RenderOptions.BitmapScalingMode="HighQuality" />

                <Ellipse Width="25" Height="25" Stroke="#fff" StrokeThickness="4" StrokeDashArray="10 78" RenderTransformOrigin="0.5 0.5" Margin="0 50 0 20">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="Rotation" Angle="0" />
                    </Ellipse.RenderTransform>

                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="Rotation" Storyboard.TargetProperty="Angle" From="0" To="360" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
            </StackPanel>
        </Grid>
    </Border>
    
</Window>

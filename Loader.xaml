<Window x:Class="Parmigiano.Loader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parmigiano"
        xmlns:components="clr-namespace:Parmigiano.UI.Components"
        mc:Ignorable="d"
        Icon="pack://application:,,,/Public/assets/logo-ico.ico"
        Title="Parmigiano Chat"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#000">

    <Border CornerRadius="10">
        <Border.Background>
            <VisualBrush Opacity="0.1" Stretch="UniformToFill">
                <VisualBrush.Visual>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                           Source="pack://application:,,,/Public/assets/chat-bg-1.png"
                           Stretch="UniformToFill"/>
                        <Image Grid.Column="1"
                           Source="pack://application:,,,/Public/assets/chat-bg-1.png"
                           Stretch="UniformToFill"/>
                    </Grid>
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.Background>

        <Grid>
            <!-- Notification Toast-->
            <components:Notification x:Name="Notification" Grid.ColumnSpan="2" Panel.ZIndex="10000" />
            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/Public/assets/logo-bg-none.png" MaxWidth="100" RenderOptions.BitmapScalingMode="HighQuality" />

                    <TextBlock Text="Parmigiano Chat"
                               Foreground="#fff"
                               FontWeight="Bold"
                               Margin="20,0,0,0"
                               FontSize="67"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
    
</Window>
